config interface loopback
	option ifname lo
	option proto static
	option ipaddr 127.0.0.1
	option netmask 255.0.0.0

config interface lan
	option type bridge
	option ifname 'bat0 eth0.1'
	option proto static
	option ipaddr 172.16.1.2
	option netmask 255.255.255.0
	option gateway 172.16.1.1
	option dns 172.16.1.1
	option igmp_snooping 1
	option stp 1
	option macaddr 84:16:f9:a8:5b:66
	
config interface lan6
	option ifname @lan
	option proto dhcpv6
	
config interface bat0
	option proto batadv

config interface wmesh
	option proto batadv_hardif
	option master bat0
	option mtu 2304

config switch
	option name switch0
	option reset 1
	option enable_vlan 1

config switch_vlan
	option device switch0
	option vlan 1
	option ports '1 2 3 4 0t'
