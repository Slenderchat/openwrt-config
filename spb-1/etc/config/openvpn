package openvpn

config openvpn server
	option enabled 0
	option proto udp
	option dev tun0
	option ca /etc/openvpn/pki/CA.crt
	option cert /etc/openvpn/pki/Spb.crt
	option key /etc/openvpn/pki/Spb.key
	option dh /etc/openvpn/pki/DH.pem
	option tls_crypt /etc/openvpn/pki/TLS.key
	option client_config_dir /etc/openvpn/ccd
	option ccd_exclusive 1
	option mode server
	option tls_server 1
	option topology subnet
	option ifconfig '172.16.2.1 255.255.252.0'
	option remote_cert_tls client
	option client_to_client 1
	option keepalive '10 120'
	option fast_io 1
	option auth SHA224
	option ncp_disable 1
	option cipher AES-128-GCM
	option comp_lzo adaptive
	option persist_key 1
	option persist_tun 1
	option verb 3
#	list route '172.16.0.0 255.255.255.0 172.16.0.1'
#	list route '172.16.1.0 255.255.255.0 172.16.1.1' 
	list push 'topology subnet'
#	list push 'route-gateway 172.16.2.1'
#	list push 'route 172.16.0.0 255.255.255.0 172.16.0.1'
#	list push 'route 172.16.1.0 255.255.255.0 172.16.1.1'
#	list push 'route 172.16.2.0 255.255.255.0 172.16.2.1'

config openvpn client
	option enabled 1
	option client 1
	option dev tun1
	option proto udp
	option remote 91.205.165.159
	option resolv_retry infinite
	option nobind 1
	option persist_key 1
	option persist_tun 1
	option ca /etc/openvpn/pki/CA.crt
	option cert /etc/openvpn/pki/Spb.crt
	option key /etc/openvpn/pki/Spb.key
	option tls_crypt /etc/openvpn/pki/TLS.key
	option fast_io 1
	option remote_cert_tls server
	option auth SHA224
	option ncp_disable 1
	option cipher AES-128-GCM
	option comp_lzo adaptive
	option verb 3
#	option pull_filter 'ignore "route 172.16.2.0 255.255.255.0"'
