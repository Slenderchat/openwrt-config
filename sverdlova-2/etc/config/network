config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config device 'ap'
	option name 'ap'
	option mtu '1440'

config device 'eth0'
	option name 'eth0.1'
	option mtu '1440'

config interface 'lan'
	option type 'bridge'
	option ifname 'bat0 eth0.1'
	option proto 'static'
	option ipaddr '192.168.0.2'
	option netmask '255.255.252.0'
	option gateway '192.168.0.1'
	option dns '192.168.0.1'
	option igmp_snooping '1'
	option stp '1'
	
config interface 'lan6'
	option ifname '@lan'
	option proto 'dhcpv6'
	option reqprefix '0'

config interface 'bat0'
	option proto 'batadv'
	option fragmentation '0'
	option gw_mode 'client'

config interface 'wmesh'
	option proto 'batadv_hardif'
	option master 'bat0'

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'switch0'
	option vlan '1'
	option ports '0 1 2 3 4 6t'